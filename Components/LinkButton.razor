<a href="@Url" class="text-center button @Class">@Text</a>

@code {
    [Parameter] public string Url { get; set; }
    [Parameter] public string Text { get; set; }
    [Parameter] public string Class { get; set; }
    [Parameter] public ButtonEnum Enum { get; set; }

    protected override void OnInitialized(){
        switch (Enum) {
            case ButtonEnum.Blog:
                Class = "blog";
                break;
                
            case ButtonEnum.Contact:
                Class = "contact";
                break;
                    
            case ButtonEnum.Email:
                Class = "email";
                break;
                
            case ButtonEnum.Portfolio:
                Class = "portfolio";
                break;
        }
    }
}