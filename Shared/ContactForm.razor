<div class="row my-4">
    <h3 class="violet text-center">Contact Jeremy</h3>
</div>

<div class="row my-2 justify-content-center">
    <div class="col-6">
        <EditForm Model="@_contactModel" OnValidSubmit="@OnValidSubmit">
            <DataAnnotationsValidator/>

            <div class="mb-3">
                <label for="@_contactModel.Name" class="form-label">Name:</label>
                <InputText Class="form-control" @bind-Value="_contactModel.Name" Id="Name"/>
                <div class="error-message">
                    <ValidationMessage For="@(() => _contactModel.Name)" />
                </div>
            </div>

            <label for="@_contactModel.EmailAddress" class="mt-2 form-label">Email Address:</label>
            <InputText Class="form-control" @bind-Value="_contactModel.EmailAddress" Id="EmailAddress"/>
            <div class="error-message">
                <ValidationMessage For="@(() => _contactModel.EmailAddress)" />
            </div>

            <label for="@_contactModel.Subject" class="mt-2 form-label">Subject:</label>
            <InputText Class="form-control" @bind-Value="_contactModel.Subject" Id="Subject"/>
            <div class="error-message">
                <ValidationMessage For="@(() => _contactModel.Subject)" />
            </div>

            <label for="@_contactModel.Message" class="mt-2 form-label">Message:</label>
            <InputTextArea Rows="6" Class="form-control" @bind-Value="_contactModel.Message" Id="Message"/>
            <div class="error-message">
                <ValidationMessage For="@(() => _contactModel.Message)" />
            </div>

            @if (_isDisabled) {
                <button class="btn button-disabled mt-3" type="submit" disabled>Send Message</button>
            } else {
                <button class="btn button-submit mt-3" type="submit">Send Message</button>
            }
        </EditForm>

        <!-- Social Icons -->
